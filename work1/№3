#include <iostream>
#include <typeinfo>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    float b, c;
    cout << "Введите значения b и c: ";
    if (!(cin >> b >> c)) {
        cout << "введён неверный символ";
        return 0;
    }
    else {
        float x = 0;
        if (b != 0) {
            x = -c / b;
        }

        cout << "Уравнения bx + c = 0 при x = " << x << endl;

        return 0;
    }
}
